<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Login">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@mipmap/logo1x" android:id="@+id/imageView2"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="88dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="147dp"/>
    <EditText
            android:layout_width="303dp"
            android:layout_height="33dp"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/et_user" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="45dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="271dp"/>
    <EditText
            android:layout_width="303dp"
            android:layout_height="33dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/et_password" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="45dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="355dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@mipmap/login" android:id="@+id/imageView4"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="102dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="495dp"/>
</android.support.constraint.ConstraintLayout>